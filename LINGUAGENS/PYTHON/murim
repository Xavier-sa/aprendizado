# InÃ­cio de uma luta
print("âš”ï¸ Um inimigo aparece: Capanga da Seita Sombria!")
vida_inimigo = 80
forca_inimigo = 10

while vida > 0 and vida_inimigo > 0:
    print(f"\nSua Vida: {vida} | Vida Inimigo: {vida_inimigo}")
    print("AÃ§Ãµes:")
    print("1) Atacar")
    print("2) Defender")
    print("3) Usar Energia (golpe especial)")

    acao = input("Escolha sua aÃ§Ã£o: ").strip()

    if acao == "1":
        dano = forca + random.randint(0, 10)
        vida_inimigo -= dano
        print(f"ğŸ’¥ VocÃª atacou e causou {dano} de dano!")
    elif acao == "2":
        defesa = random.randint(5, 15)
        dano_recebido = max(0, forca_inimigo - defesa)
        vida -= dano_recebido
        print(f"ğŸ›¡ï¸ VocÃª defendeu! Recebeu apenas {dano_recebido} de dano.")
    elif acao == "3" and energia >= 20:
        dano = poder + random.randint(10, 20)
        vida_inimigo -= dano
        energia -= 20
        print(f"âš¡ VocÃª usou um golpe especial e causou {dano} de dano!")
    else:
        print("âš ï¸ AÃ§Ã£o invÃ¡lida ou energia insuficiente!")

    # Turno inimigo (se ele ainda estiver vivo)
    if vida_inimigo > 0:
        dano_inimigo = forca_inimigo + random.randint(0, 5)
        vida -= dano_inimigo
        print(f"ğŸ‘¹ O inimigo atacou e causou {dano_inimigo} de dano!")

if vida > 0:
    print("\nğŸ‰ VocÃª venceu a batalha!")
